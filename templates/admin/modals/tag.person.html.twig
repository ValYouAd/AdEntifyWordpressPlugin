<form id="ad-person-tag-form">
    <div class="tag-form tab-pane active" id="tag-person" style="display: none">
        <div class="form-group">
            <input class="form-control" id="person-name" name="person-name" type="text" placeholder="Name">
        </div>
        <div class="form-group">
            <input class="form-control" id="person-description" name="person-description" type="text" placeholder="Description">
        </div>
        <div class="form-group">
            <input class="form-control" id="person-url" name="person-url" type="text" placeholder="Url">
        </div>
        <p>
            <button id="submit-tag-person" type="submit">Confirm and add tag</button>
            <button id="cancel-tag-person">Cancel</button>
        </p>
    </div>
</form>
<form id="ad-product-tag-form" data-tag-type="product">
    <div class="tag-form tab-pane active" id="tag-product">
        <div class="form-group">
            <input class="form-control" id="brand-name" name="name" type="hidden" placeholder="Coca-cola, Apple, Zara...">
        </div>
        <div class="form-group">
            <input class="form-control" id="product-name" name="description" type="text" placeholder="Product name">
        </div>
        <div class="form-group">
            <input class="form-control" id="product-url" name="url" type="text" placeholder="Product url">
        </div>
        <p class="submit-tag">
            <button id="submit-tag-product" type="submit">Confirm and add tag</button>
            <button id="cancel-tag-product">Cancel</button>
        </p>
        <div id="ad-posting-tag" class="loading-gif-container" style="display: none">
            <div class="loader rotate">
                <div class="loading-gif"></div>
            </div>
        </div>
    </div>
</form>
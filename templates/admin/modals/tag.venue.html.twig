<form id="ad-venue-tag-form" data-tag-type="venue">
    <div class="tag-form tab-pane active" id="tag-venue" style="display: none">
        <div class="form-group">
            <input class="form-control" id="venue-name" name="name" type="text" placeholder="Venue name">
        </div>
        <div class="form-group">
            <input class="form-control" id="venue-description" name="description" type="text" placeholder="Venue description">
        </div>
        <div class="form-group">
            <input class="form-control" id="venue-url" name="url" type="text" placeholder="Venue url">
        </div>
        <p class="submit-tag">
            <button id="submit-tag-venue" type="submit">Confirm and add tag</button>
            <button id="cancel-tag-venue">Cancel</button>
        </p>
        <div class="loading-gif-container ad-posting-tag" style="display: none">
            <div class="loader rotate">
                <div class="loading-gif"></div>
            </div>
        </div>
    </div>
</form>
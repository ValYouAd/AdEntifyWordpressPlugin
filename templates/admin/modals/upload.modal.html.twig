<script type="text/html" id="adentify-uploader">
    <div tabindex="0" id="__wp-uploader-id-2" class="supports-drag-drop" style="position: relative;">
        <div class="media-modal wp-core-ui">
            <a id="adentify-modal-close" class="media-modal-close" href="#"><span class="media-modal-icon"><span class="screen-reader-text">Fermer le panneau des médias</span></span></a>
            <div id="ad-upload-modal" class="media-modal-content">
                <div class="media-frame mode-select wp-core-ui" id="__wp-uploader-id-0">
                    <div class="ad-media-frame-title"><h1>Insérer un média</h1></div>
                    <div class="ad-media-frame-router">
                        <div class="media-router">
                            <a id="upload-file" href="#" class="media-menu-item active">Envoyer des fichiers</a>
                            <a id="file-library" href="#" class="media-menu-item">Bibliothèque de médias</a>
                        </div>
                    </div>
                    <div class="ad-media-frame-content">
                        <div id="ad-uploader" class="uploader-inline">
                            <div class="uploader-inline-content no-upload-message">
                                <div class="upload-ui">
                                    <form role="form" enctype="multipart/form-data">
                                        <input id="upload-img" type="file" accept="image/jpg, image/gif, image/png" name="ad-upload-img" style="display: none"/>
                                        <h3 class="upload-instructions drop-instructions">Déposez vos fichiers n’importe où pour les mettre en ligne</h3>
                                        <p class="upload-instructions drop-instructions">ou</p>
                                        <a href="#" class="browser button button-hero" style="display: inline; position: relative; z-index: 1;" id="adentify-uploader-button">
                                            Sélectionner des fichiers
                                        </a>
                                    </form>
                                </div>
                                <div class="upload-inline-status">
                                    <div class="media-uploader-status" style="display: none;">
                                        <h3>Mise en ligne</h3>
                                        <a class="upload-dismiss-errors" href="#">Ignorer les erreurs</a>
                                        <div class="media-progress-bar"><div>
                                        </div></div>
                                        <div class="upload-details">
                                            <span class="upload-count">
                                                <span class="upload-index"></span> / <span class="upload-total"></span>
                                            </span>
                                            <span class="upload-detail-separator">–</span>
                                            <span class="upload-filename"></span>
                                        </div>
                                        <div class="upload-errors"></div>
                                    </div>
                                </div>
                                <div class="post-upload-ui">
                                    <p class="max-upload-size">Taille de fichier maximale pour la mise en ligne&nbsp;: ?? MB.</p>
                                </div>
                            </div>
                        </div>

                        <div id="ad-library" style="display:none">
                            <div id="ad-library-content">
                                {% for photo in photos %}
                                    <div class="ad-library-photo-wrapper" data-adentidfy-photo-id="{{ photo.adentify_photo_id }}">
                                        <img tabindex="0" class="ad-library-photo" data-adentify-photo-id="{{ photo.adentify_photo_id }}" src="{{ photo.thumb_url }}" />
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="ad-media-frame-toolbar">
                        <div class="media-toolbar">
                            <div class="media-toolbar-secondary">
                                <div class="media-selection empty">
                                    <div class="selection-info">
                                        <span class="count">0 sélection(s)</span>
                                        <a class="edit-selection" href="#">Modifier</a>
                                        <a class="clear-selection" href="#">Effacer</a>
                                    </div>
                                    <div class="selection-view">
                                        <ul tabindex="-1" class="attachments ui-sortable" id="__attachments-view-75"></ul>
                                    </div>
                                </div>
                            </div>
                            <div class="media-toolbar-primary search-form">
                                <a tabindex="0" id="ad-insert-from-library" href="#" class="button media-button button-primary button-large media-button-insert" disabled="disabled">Insérer dans l’article</a>
                                <a tabindex="0" id="ad-tag-from-library" href="#" class="button media-button button-primary button-large media-button-insert" disabled="disabled">Ajouter un tag</a>
                            </div>
                        </div>
                    </div>
                    <div class="media-frame-uploader">
                        <div class="uploader-window">
                            <div class="uploader-window-content">
                                <h3>Déposez vos fichiers pour les mettre en ligne</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="adentify-modal-backdrop" class="ad-media-modal-backdrop"></div>
    </div>
</script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="../wp-content/plugins/adentify/js/vendor/jquery.ui.widget.js"></script>
<script src="../wp-content/plugins/adentify/js/vendor/jquery.iframe-transport.js"></script>
<script src="../wp-content/plugins/adentify/js/vendor/jquery.fileupload.js"></script>
